<h1>New Blog Post</h1>

<%=form_with model: @blogpost do |form|%>
    <div>
        
        title:
        <%= form.label :title%>
         <%= form.text_field :title%> <br>
        content:
        <%= form.label :content%> 
        <%= form.text_field :content%> <br>

        release_date: 
        <%= form.label :release_date%>
        <%= form.datetime_select :release_date%> <br>
    
    </div>
    <div>
        <%= form.submit%>
    </div>
<% end %>